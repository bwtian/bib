keywords = {Fumarolic activity,Landsat TM,Remote sensing,Thermal analysis,Unzen},
pages = {57--64},
title = {{Landsat infrared analysis of fumarole activity at Unzen Volcano: Time-series comparison with gas and magma fluxes}},
volume = {89},
year = {1999}
}
