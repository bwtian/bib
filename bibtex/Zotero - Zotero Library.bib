doi = {10.1016/j.rse.2010.06.002},
isbn = {0034-4257},
issn = {00344257},
journal = {Remote Sensing of Environment},
keywords = {Heat flux,MODIS,Mixed depth layer,Remote sensing,Thermal amplitude,Water surface temperature},
pages = {2651--2665},
title = {{Remote sensing of water surface temperature and heat flux over a tropical hydroelectric reservoir}},
volume = {114},
year = {2010}
}
